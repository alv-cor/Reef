<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorSurfaceContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.Reef"
    android:padding="48dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="@string/nothing"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@drawable/mobile_illustration" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAppearance="?textAppearanceDisplaySmall"
        android:textColor="?colorOnSurface"
        android:textStyle="bold"
        tools:text="App Name" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:textAppearance="?textAppearanceBodyLarge"
        android:textColor="?colorOnSurfaceVariant"
        tools:text="A brief and friendly description of what the app does, designed to feel inviting and modern." />

</LinearLayout>
